{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "process",
      "label": "cargo build embedded",
      "command": "cargo",
      "args": ["build", "--features", "embedded"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "process",
      "label": "cargo build browser",
      "command": "cargo",
      "args": ["build", "--features", "browser"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "process",
      "label": "cargo doc",
      "command": "cargo doc --open",
      "problemMatcher": ["$rustc"]
    },
    {
      "type": "npm",
      "script": "release",
      "path": "ui/",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "releaseall",
      "path": "ui/",
      "problemMatcher": []
    }
  ]
}
