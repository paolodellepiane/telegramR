  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Terminal (integrated)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "type": "gdb",
      "request": "launch",
      "name": "Linux Prod",
      "preLaunchTask": "cargo build",
      "target": "./target/debug/telegramr",
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "gdb",
      "request": "launch",
      "name": "Linux Dev",
      "preLaunchTask": "cargo build ws",
      "target": "./target/debug/telegramr",
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Windows Prod",
      "type": "cppvsdbg",
      "request": "launch",
      "preLaunchTask": "cargo build",
      "program": "target/debug/telegramr.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "logging": {
        "moduleLoad": false
      }
    },
    {
      "name": "Windows Dev",
      "type": "cppvsdbg",
      "request": "launch",
      "preLaunchTask": "cargo build ws",
      "program": "target/debug/telegramr.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "logging": {
        "moduleLoad": false
      }
    }
  ]
}
