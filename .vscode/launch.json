  "version": "0.2.0",
  "configurations": [
    {
      "type": "gdb",
      "request": "launch",
      "name": "Linux Production",
      "preLaunchTask": "cargo build",
      "target": "./target/debug/telegramr",
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "gdb",
      "request": "launch",
      "name": "Linux Dev",
      "preLaunchTask": "cargo build ws",
      "target": "./target/debug/telegramr",
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Windows Production",
      "type": "cppvsdbg",
      "request": "launch",
      "preLaunchTask": "cargo build",
      "program": "target/debug/telegramr.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true
    },
    {
      "name": "Windows Dev",
      "type": "cppvsdbg",
      "request": "launch",
      "preLaunchTask": "cargo build ws",
      "program": "target/debug/telegramr.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
